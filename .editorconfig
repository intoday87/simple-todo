root = true

[*]
max_line_length = 150
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

[*.{hbs,html}]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf
